
@{

    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>
    <!--jquery-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <!--Layui-->
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/layui/layui.all.js"></script>

    <script src="~/Scripts/three.r119.min.js"></script>
    <script src="~/Scripts/vanta.birds.min.js"></script>

    <style>
        .gbGlassmorphism {
            backdrop-filter: blur(10px) saturate(180%);
            -webkit-backdrop-filter: blur(16px) saturate(180%);
            background-color: rgba(17, 25, 40, 0.5);
        }

        .cardGlassmorphism1 {
            background-color: rgba(80, 113, 175, 0.1);
            border-radius: 15px;
            position: absolute;
            left: 0px;
            bottom: 0px;
            text-align: center;
            width: 100%;
        }

        .bgpic {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .chinaTitle {
            color: #c2c2c2;
            font-size: 28px;
            font-family: 'Microsoft YaHei';
            letter-spacing: 10px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div id="bg" style="position:absolute;width:100%;height:100%;">
        <!--窗体模糊-->
        <div class="cardGlassmorphism1">
            <div class="layui-row">
                <div class="layui-col-md6">
                    <div class="grid-demo">
                        <div>
                            <p class="chinaTitle">后台管理系统</p>
                        </div>
                    </div>
                </div>

                <div class="layui-col-md6">
                    <div class="grid-demo grid-demo-bg1">

                        <div style="margin:10px 50px 10px 50px;">
                            <form class="layui-form" action="~/Platform/LoginAdmin" method="post">
                                <div class="layui-row">
                                    <div class="layui-col-md6">
                                        <div class="grid-demo grid-demo-bg1">

                                            <div class="layui-row">
                                                <div class="layui-col-md4">
                                                    <div class="grid-demo grid-demo-bg1">
                                                        <div class="layui-form-item" style="margin-bottom:0px;">
                                                            <div class="layui-input-block" style="margin-left:0px;display:flex;align-items:center;">
                                                                <p style="color:#c2c2c2;display:flex;height:40px;align-items:center;margin: 0 auto;font-size:16px;font-family: 'Microsoft YaHei';letter-spacing:1px;">
                                                                    @Html.ValidationMessage("failed")
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="layui-col-md4">
                                                    <div class="grid-demo">
                                                        <div class="layui-form-item" style="margin-bottom:0px;">
                                                            <label class="layui-form-label" style="color:#c2c2c2;padding-left:0px;font-size:20px;text-align:right;"><i class="layui-icon layui-icon-username" style="font-size:20px;"></i>&nbsp;&nbsp;用&nbsp;&nbsp;户&nbsp;&nbsp;username</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="layui-col-md4">
                                                    <div class="grid-demo grid-demo-bg1">
                                                        <div class="layui-form-item" style="margin-bottom:0px;">
                                                            <div class="layui-input-block" style="margin-left:0px;">
                                                                <input type="text" name="username" lay-verify="required" lay-reqtext="用户不能为空！" placeholder="请输入用户" autocomplete="off" class="layui-input" style="background-color:rgba(255, 255, 255, 0.9);height:40px;font-size:16px;font-family: 'Microsoft YaHei';letter-spacing:1px;">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="layui-col-md6">
                                        <div class="grid-demo">

                                            <div class="layui-row">
                                                <div class="layui-col-md4">
                                                    <div class="grid-demo grid-demo-bg1">
                                                        <div class="layui-form-item" style="margin-bottom:0px;">
                                                            <label class="layui-form-label" style="color:#c2c2c2;padding-left:0px;font-size:20px;text-align:right;"><i class="layui-icon layui-icon-password" style="font-size:20px;"></i>&nbsp;&nbsp;密&nbsp;&nbsp;码&nbsp;&nbsp;password</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="layui-col-md4">
                                                    <div class="grid-demo">
                                                        <div class="layui-form-item" style="margin-bottom:0px;">
                                                            <div class="layui-input-block" style="margin-left:0px;">
                                                                <input type="password" name="password" lay-verify="required" lay-reqtext="密码不能为空！" placeholder="请输入密码" autocomplete="off" class="layui-input" style="background-color:rgba(255, 255, 255, 0.9);height:40px;font-size:16px;font-family: 'Microsoft YaHei';letter-spacing:1px;">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="layui-col-md4">
                                                    <div class="grid-demo grid-demo-bg1">
                                                        <div class="layui-form-item" style="margin-bottom:0px;">
                                                            <button type="submit" class="layui-bg-blue" lay-submit="" style="width:100%;height:40px;font-size:20px;margin-left:20px;color:#c2c2c2!important;">登&nbsp;&nbsp;&nbsp;&nbsp;录</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        if (window.VANTA) window.VANTA.BIRDS({
            el: "#bg",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00
        })
    </script>

</body>
</html>